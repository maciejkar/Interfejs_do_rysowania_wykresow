#:kivy 1.9.1



<MyLayout>

    canvas.before:
        Color:
            rgba: (0, 0, 0, 0)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        size: root.width, root.height

        Label:
            text: "Start x"
            size_hint: (0.1, 0.05)
            pos_hint: {'x':0, 'top':1}

        Label:
            text: "Stop x "
            size_hint: (0.1, 0.05)
            pos_hint: {'x':0.1, 'top':1}

        TextInput:
            id: x_min
            pos_hint: {'x':0, 'top':0.95}
            size_hint: (0.1, 0.1)
            font_size: root.height * 0.07
        
        TextInput:
            id: x_max
            pos_hint: {'x':0.1, 'top':0.95}
            size_hint: (0.1, 0.1)
            font_size: root.height * 0.07

        Label:
            text: "Start y"
            size_hint: (0.1, 0.05)
            pos_hint: {'x':0, 'top':0.85}

        Label:
            text: "Stop y "
            size_hint: (0.1, 0.05)
            pos_hint: {'x':0.1, 'top':0.85}

        TextInput:
            id: y_min
            pos_hint: {'x':0, 'top':0.8}
            size_hint: (0.1, 0.1)
            font_size: root.height * 0.07
        
        TextInput:
            id: y_max
            pos_hint: {'x':0.1, 'top':0.8}
            size_hint: (0.1, 0.1)
            font_size: root.height * 0.07

        Label:
            text: "Title"
            size_hint: (0.2, 0.05)
            pos_hint: {'x':0, 'top':0.7}

        TextInput:
            id: title
            size_hint: (0.2, 0.1)
            pos_hint: {'x':0, 'top':0.65}
            font_size: root.height * 0.03
        
        Label:
            text: "Name of x label"
            size_hint: (0.2, 0.05)
            pos_hint: {'x':0, 'top':0.55}

        TextInput:
            id: x_label
            size_hint: (0.2, 0.1)
            pos_hint: {'x':0, 'top':0.5}
            font_size: root.height * 0.03

        Label:
            text: "Name of y label"
            size_hint: (0.2, 0.05)
            pos_hint: {'x':0, 'top':0.4}

        TextInput:
            id: y_label
            size_hint: (0.2, 0.1)
            pos_hint: {'x':0, 'top':0.35}
            font_size: root.height * 0.03

        Label:
            text: "Legend"
            size_hint: (0.1, 0.05)
            pos_hint: {'x':0, 'top':0.25}

        CheckBox:
            id: legend
            pos_hint: {'x':0.1, 'top':0.25}
            size_hint: (0.1, 0.05)
            background_color: (1,0,0,1)

        Button:
            text: "Plot"
            size_hint: (0.2, 0.2)
            pos_hint: {'x':0, 'top':0.2}
            on_press: root.plot()

        Button:
            text: "Exit"
            size_hint: (0.1, 0.35)
            pos_hint: {'x':0.9, 'top':0.35}
            on_press: root.exit()

        TextInput:
            id: func
            text: ""
            pos_hint: {'x':0.25, 'top':0.4}
            size_hint: (0.6, 0.1)
            font_size: root.height * 0.07
            multilane: False
            keyboard_suggestions: True

        Image:
            id: image
            source: ''
            size_hint_y: 0.54
            size_hint_x: 0.78
            pos_hint: {'x': 0.21 , 'top':0.97}
            allow_stretch: True
            keep_ratio: False

        Label:
            id: information
            text: 'Here wil be your plot'
            multilane: True
            color: (0, 0, 0)
            font_size: root.width * 0.045
            size_hint_y: 0.54
            size_hint_x: 0.78
            pos_hint: {'x': 0.21 , 'top':0.97}

        GridLayout:
            size_hint: 0.6 , 0.3
            # center:  root.height * (0.4 /2 ), root.width * (0.7 + 0.2)/2 
            pos_hint: {'x': 0.25 , 'top':0.3}
            cols: 8
            rows: 4

            Button:
                text:"7"
                on_press: root.keypad(7)

            Button:
                text:"8"
                on_press: root.keypad(8)

            Button:
                text:"9"
                on_press: root.keypad(9)

            Button:
                text:"/"
                on_press: root.keypad("/")

            Button:
                text:"C"
                on_press: root.keypad("C")

            Button:
                text:"sin"
                on_press: root.keypad("sin")

            Button:
                text:"cos"
                on_press: root.keypad("cos")

            Button:
                text:"tan"
                on_press: root.keypad("tan")

            # next row

            Button:
                text:"4"
                on_press: root.keypad(4)

            Button:
                text:"5"
                on_press: root.keypad(5)

            Button:
                text:"6"
                on_press: root.keypad("6")

            Button:
                text:"*"
                on_press: root.keypad("*")

            Button:
                text:"CE"
                on_press: root.keypad("CE")

            Button:
                text:"ln"
                on_press: root.keypad("ln")

            Button:
                text:"log"
                on_press: root.keypad("log")

            Button:
                text:"sqrt"
                on_press: root.keypad("sqrt")

            Button:
                text:"1"
                on_press: root.keypad(1)

            Button:
                text:"2"
                on_press: root.keypad(2)

            Button:
                text:"3"
                on_press: root.keypad(3)

            Button:
                text:"-"
                on_press: root.keypad("-")

            Button:
                text:"abs"
                on_press: root.keypad("abs")

            Button:
                text:"pi"
                on_press: root.keypad("pi")

            Button:
                text:"e"
                on_press: root.keypad("e")

            Button:
                text:"^"
                on_press: root.keypad("^")
            
            # next row

            Button:
                text:"0"
                on_press: root.keypad("0")

            Button:
                text:"."
                on_press: root.keypad(".")

            Button:
                text:"x"
                on_press: root.keypad("x")

            Button:
                text:"+"
                on_press: root.keypad("+")

            Button:
                text:";"
                on_press: root.keypad(';')

            Button:
                text:"("
                on_press: root.keypad("(")

            Button:
                text:")"
                on_press: root.keypad(")")

            Button:
                text:"Space"
                on_press: root.keypad(" ")

            
            
        

            

        


